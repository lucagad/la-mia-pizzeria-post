@{
    ViewData["Title"] = "Homepage - ";
    //Layout = null;
}
@model List<Pizza>;

<div class="container mt-4">

    <div class="card w-100">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5>Lista delle Pizze</h5>
            <a class="btn btn_custom_secondary" href="@Url.Action("Create", "Pizza")">+</a>
        </div>
        
        <div class="card-body mx-1 d-flex flex-column flex-md-row row">
          @if (Model.Count !=0 )
          {
              <table class="table">
                  <thead class="thead-light">
                  <tr>
                      <th scope="col">#</th>
                      <th scope="col">Miniatura</th>
                      <th scope="col">Nome</th>
                      <th scope="col">Prezzo</th>
                      <th scope="col">Azioni</th>
                  </tr>
                  </thead>

                  <tbody>
                  @{
                      int count = 0;
                  }
                  @foreach (Pizza pizza in @Model)
                  {
                      <tr>
                          <th scope="row">@count</th>
                          <td><img class="table-img-custom" src="@pizza.ImgUrl" alt="@pizza.Name"></td>
                          <td>@pizza.Name</td>
                          <td>@pizza.Price €</td>
                          <td>
                              <a class="btn btn_custom_info" href="@Url.Action("Show", "Pizza", new { id = count++ })"><i class="fas fa-info-circle"></i></a>
                              <a class="btn btn_custom_edit" href="#"><i class="fas fa-edit"></i></a>
                              <a class="btn btn-danger" href="#"><i class="fas fa-trash"></i></a>
                          </td>

                      </tr>
                  }

                  </tbody>
              </table>
          }
          else
          {
              <p>Non è presente nessun elemento.</p>
          }
        </div>
        
    </div>
</div>